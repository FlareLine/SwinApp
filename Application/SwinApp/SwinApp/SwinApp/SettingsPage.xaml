<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SwinApp.SettingsPage"
             Title="Settings"
             Style="{DynamicResource backgroundStyle}">
    <ContentPage.Content>
        <StackLayout>
            <Frame Style="{DynamicResource FrameCard}" Margin="5">
                <StackLayout Orientation="Horizontal">
                    <Label Text="Use dark theme:" FontSize="Medium"></Label>
                    <Switch x:Name="SwitchChangeTheme" HorizontalOptions="EndAndExpand"></Switch>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>