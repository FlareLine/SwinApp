<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SwinApp.Components.CardBBAnnouncement">
    <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
        <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Frame>
        <StackLayout VerticalOptions="CenterAndExpand">
            <Label  Text="{Binding Title}" FontSize="Medium" />
            <Label x:Name="TextBody" Text="{Binding Body}" LineBreakMode="TailTruncation" FontSize="Small"/>
        </StackLayout>
    </Frame>
    <Grid x:Name="GridShowAll" Grid.Row="1">
        <Label HorizontalTextAlignment="End" Text="Show All Announcements"/>
    </Grid>
</Grid>