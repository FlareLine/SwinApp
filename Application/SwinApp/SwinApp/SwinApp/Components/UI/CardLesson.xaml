<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SwinApp.Components.CardLesson">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <StackLayout Grid.Column="0" VerticalOptions="Center">
            <Label Text="{Binding Day}" FontSize="Medium"></Label>
            <Label Text="{Binding TimeOfDay}" FontSize="Medium"></Label>
            <Label Text="{Binding Date}" FontSize="Medium"></Label>
        </StackLayout>
        <Frame Grid.Column="1" BackgroundColor="{Binding LessonColor}">
            <Frame.Resources>
                <ResourceDictionary>
                    <Style TargetType="Label">
                        <Setter Property="TextColor" Value="#fff"/>
                    </Style>
                </ResourceDictionary>
            </Frame.Resources>
            <StackLayout VerticalOptions="FillAndExpand">
                <!--What is currently binding Name should display both Name and UnitCode-->
                <Label Text="{Binding Description}" FontSize="Medium"></Label>
                <Label Text="{Binding Location}"></Label>
            </StackLayout>
        </Frame>
    </Grid>
    
</Grid>