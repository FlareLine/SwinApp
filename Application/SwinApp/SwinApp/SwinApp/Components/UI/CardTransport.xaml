<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SwinApp.Components.UI.CardTransport">
    <Grid x:Name="CityCard">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Text="{Binding Route}" Grid.Row="0"/>
        <Label Text="{Binding Time}" Grid.Row="1"/>
        <Label Text="{Binding Platform}" Grid.Row="2"/>
    </Grid>
