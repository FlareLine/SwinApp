<?xml version="1.0" encoding="utf-8" ?>
<CarouselPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SwinApp.WelcomePage">
    <CarouselPage.Children>
        <ContentPage
            x:Name="Page1">
            <Grid Padding="">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid BackgroundColor="{StaticResource Maroon}" Grid.Row="0">
                    <Label TextColor="White" VerticalTextAlignment="End" FontAttributes="Bold" FontSize="Large" Text="Welcome to SwinApp"/>
                </Grid>
                
            </Grid>
        </ContentPage>
    </CarouselPage.Children>
</CarouselPage>
